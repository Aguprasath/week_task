<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%if can?(:manage,comment) %>
      <%= link_to "Show this comment",topic_post_comment_path(@post.topic,@post,comment),class:"link"%>
      <%end %>
        </p>
    <%= render 'user_comment_ratings/form', comment: comment %>
    <%#= link_to 'View Ratings', view_ratings_path(comment_id: comment.id),class: "link" %>
    <% end %>
</div>

<%= link_to "New comment", new_topic_post_comment_path,class:"link" %>
<%= link_to "Back to Post",topic_posts_path,class:"link" %>